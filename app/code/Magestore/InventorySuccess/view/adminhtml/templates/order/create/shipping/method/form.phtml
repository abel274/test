<script type="text/javascript">
    require([
        "jquery",
        'mage/url',
        "mage/calendar",
        "Magento_Sales/order/create/form"
    ], function($, url){

        $("#delivery_date").datepicker("destroy");
        $("#delivery_date").datepicker(
            {
                minDate: new Date(),
                dateFormat: 'yy-mm-dd'
            });

        $("#delivery_date").change(function () {
            var date = $("#delivery_date").val();

            $.ajax({
                url: url.build("../../../../../inventorysuccess/deliveryDate/saveSession"),
                type: "post",
                dateType: "json",
                showLoader: true,
                data: {
                    deliveryDate: date
                },
                success: function (result) {

                },
                always: function () {

                }
            });
        });

        if($("#delivery_date").val() == null || $("#delivery_date").val() == '') {
            $("#delivery_date").val($.datepicker.formatDate('yy-mm-dd', new Date())).trigger('change');
        } else {
            $("#delivery_date").trigger('change');
        }
    })
</script>